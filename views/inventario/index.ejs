<div class="flex flex-col gap-6">
  <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Inventario</h1>
      <p class="text-sm text-gray-500">Control de productos, movimientos y ventas en un solo lugar.</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <button class="px-4 py-2 bg-gray-900 text-white rounded-md text-sm font-semibold">
        <i class="fa-solid fa-box-open mr-2"></i>Nuevo producto
      </button>
      <button class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm font-semibold text-gray-700">
        <i class="fa-solid fa-file-arrow-down mr-2"></i>Exportar
      </button>
      <button class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm font-semibold text-gray-700">
        <i class="fa-solid fa-gear mr-2"></i>Ajustes
      </button>
    </div>
  </div>

  <section class="bg-gray-50 border border-gray-200 rounded-lg p-4">
    <form method="GET" action="/inventario" class="flex flex-col gap-3 lg:flex-row lg:items-end">
      <div class="flex-1">
        <label class="text-xs font-semibold text-gray-600">B?squeda</label>
        <div class="relative">
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
            <i class="fa-solid fa-magnifying-glass"></i>
          </span>
          <input name="search" value="<%= filters.search %>" class="w-full pl-9 pr-3 py-2 border border-gray-300 rounded-md text-sm" placeholder="Buscar por SKU, nombre o proveedor"/>
        </div>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 flex-1">
        <div>
          <label class="text-xs font-semibold text-gray-600">Categor?a</label>
          <select name="category" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
            <% ['Todos','Ruedas','Rodamientos','Accesorios'].forEach(function(option){ %>
              <option value="<%= option %>" <%= filters.category === option ? 'selected' : '' %>><%= option %></option>
            <% }) %>
          </select>
        </div>
        <div>
          <label class="text-xs font-semibold text-gray-600">Estado</label>
          <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
            <% ['Todos','Activo','Inactivo','Bajo stock'].forEach(function(option){ %>
              <option value="<%= option %>" <%= filters.status === option ? 'selected' : '' %>><%= option %></option>
            <% }) %>
          </select>
        </div>
        <div>
          <label class="text-xs font-semibold text-gray-600">Ordenar</label>
          <select name="sortBy" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
            <% ['?ltima actualizaci?n','Nombre (A-Z)','Stock (mayor a menor)','Precio (mayor a menor)'].forEach(function(option){ %>
              <option value="<%= option %>" <%= filters.sortBy === option ? 'selected' : '' %>><%= option %></option>
            <% }) %>
          </select>
        </div>
        <div>
          <label class="text-xs font-semibold text-gray-600">Sucursal</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
            <option>Principal</option>
            <option>Durango Norte</option>
            <option>CDMX</option>
          </select>
        </div>
      </div>
      <div class="flex gap-2">
        <button type="submit" class="px-4 py-2 bg-gray-900 text-white rounded-md text-sm font-semibold">Aplicar</button>
        <a href="/inventario" class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm font-semibold text-gray-700">Limpiar</a>
      </div>
    </form>
  </section>

  <section class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <p class="text-xs text-gray-500">Productos activos</p>
      <p class="text-2xl font-bold text-gray-900"><%= metrics.activeCount %></p>
      <p class="text-xs text-green-600 mt-1">+4% vs. mes anterior</p>
    </div>
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <p class="text-xs text-gray-500">Bajo stock</p>
      <p class="text-2xl font-bold text-gray-900"><%= metrics.lowStock %></p>
      <p class="text-xs text-red-600 mt-1">Requieren reposici?n</p>
    </div>
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <p class="text-xs text-gray-500">Valor inventario</p>
      <p class="text-2xl font-bold text-gray-900">$<%= metrics.totalValue.toLocaleString('es-MX') %></p>
      <p class="text-xs text-gray-500 mt-1">Costo total estimado</p>
    </div>
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <p class="text-xs text-gray-500">Movimientos hoy</p>
      <p class="text-2xl font-bold text-gray-900"><%= metrics.todayMovements %></p>
      <p class="text-xs text-gray-500 mt-1">Entradas y salidas</p>
    </div>
  </section>

  <section class="grid grid-cols-1 xl:grid-cols-3 gap-6">
    <div class="xl:col-span-2 flex flex-col gap-6">
      <div class="bg-white border border-gray-200 rounded-lg">
        <div class="flex items-center justify-between px-4 py-3 border-b">
          <div>
            <h2 class="text-lg font-semibold text-gray-900">Lista de productos</h2>
            <p class="text-xs text-gray-500">?ltima actualizaci?n din?mica</p>
          </div>
          <div class="flex gap-2 text-sm">
            <button class="px-3 py-1.5 border border-gray-300 rounded-md">Importar CSV</button>
            <a href="/inventario" class="px-3 py-1.5 bg-gray-900 text-white rounded-md">Agregar</a>
          </div>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full text-sm">
            <thead class="bg-gray-50 text-gray-600">
              <tr>
                <th class="text-left px-4 py-3">SKU</th>
                <th class="text-left px-4 py-3">Producto</th>
                <th class="text-left px-4 py-3">Categor?a</th>
                <th class="text-left px-4 py-3">Stock</th>
                <th class="text-left px-4 py-3">Precio</th>
                <th class="text-left px-4 py-3">Estado</th>
                <th class="text-left px-4 py-3">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y">
              <% if (products.length === 0) { %>
                <tr>
                  <td colspan="7" class="px-4 py-6 text-center text-gray-500">Sin productos</td>
                </tr>
              <% } %>
              <% products.forEach(function(p){ %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold"><%= p.sku %></td>
                  <td class="px-4 py-3"><%= p.name %></td>
                  <td class="px-4 py-3"><%= p.category %></td>
                  <td class="px-4 py-3"><%= p.stock %></td>
                  <td class="px-4 py-3">$<%= p.price.toLocaleString('es-MX') %></td>
                  <td class="px-4 py-3">
                    <% if (p.stock <= p.minStock) { %>
                      <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded-full text-xs">Bajo stock</span>
                    <% } else { %>
                      <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs"><%= p.status %></span>
                    <% } %>
                  </td>
                  <td class="px-4 py-3">
                    <div class="flex gap-2 text-gray-500">
                      <a href="/inventario?editId=<%= p.id %>"><i class="fa-solid fa-pen"></i></a>
                      <button type="button"><i class="fa-solid fa-ellipsis"></i></button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="flex items-center justify-between px-4 py-3 text-sm text-gray-600">
          <span>Mostrando <%= products.length %> productos</span>
          <div class="flex items-center gap-2">
            <button class="px-3 py-1.5 border rounded-md">Anterior</button>
            <button class="px-3 py-1.5 border rounded-md">Siguiente</button>
          </div>
        </div>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg">
        <div class="px-4 py-3 border-b">
          <h2 class="text-lg font-semibold text-gray-900">Movimientos de inventario</h2>
          <p class="text-xs text-gray-500">Entradas, salidas y ajustes recientes</p>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full text-sm">
            <thead class="bg-gray-50 text-gray-600">
              <tr>
                <th class="text-left px-4 py-3">Fecha</th>
                <th class="text-left px-4 py-3">Tipo</th>
                <th class="text-left px-4 py-3">Producto</th>
                <th class="text-left px-4 py-3">Cantidad</th>
                <th class="text-left px-4 py-3">Responsable</th>
                <th class="text-left px-4 py-3">Referencia</th>
              </tr>
            </thead>
            <tbody class="divide-y">
              <% movements.forEach(function(m){ %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3"><%= m.date.toLocaleString('es-MX') %></td>
                  <td class="px-4 py-3">
                    <span class="font-semibold <%= m.type === 'Entrada' ? 'text-green-700' : (m.type === 'Salida' ? 'text-red-700' : 'text-yellow-700') %>">
                      <%= m.type %>
                    </span>
                  </td>
                  <td class="px-4 py-3"><%= m.product %></td>
                  <td class="px-4 py-3"><%= m.qty > 0 ? '+' + m.qty : m.qty %></td>
                  <td class="px-4 py-3"><%= m.owner %></td>
                  <td class="px-4 py-3"><%= m.ref %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-6">
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Agregar / editar producto</h2>
          <% if (editProduct) { %>
            <span class="text-xs text-gray-400">Editando: <%= editProduct.sku %></span>
          <% } else { %>
            <span class="text-xs text-gray-400">Nuevo</span>
          <% } %>
        </div>
        <form method="POST" action="<%= editProduct ? '/inventario/productos/' + editProduct.id : '/inventario/productos' %>" class="grid grid-cols-1 gap-3 mt-4 text-sm">
          <div>
            <label class="text-xs font-semibold text-gray-600">SKU</label>
            <input name="sku" value="<%= editProduct ? editProduct.sku : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="RW-0000"/>
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-600">Nombre</label>
            <input name="name" value="<%= editProduct ? editProduct.name : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Nombre del producto"/>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="text-xs font-semibold text-gray-600">Categor?a</label>
              <select name="category" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <% ['Ruedas','Rodamientos','Accesorios'].forEach(function(option){ %>
                  <option value="<%= option %>" <%= editProduct && editProduct.category === option ? 'selected' : '' %>><%= option %></option>
                <% }) %>
              </select>
            </div>
            <div>
              <label class="text-xs font-semibold text-gray-600">Estado</label>
              <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <% ['Activo','Inactivo'].forEach(function(option){ %>
                  <option value="<%= option %>" <%= editProduct && editProduct.status === option ? 'selected' : '' %>><%= option %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="text-xs font-semibold text-gray-600">Costo</label>
              <input name="cost" value="<%= editProduct ? editProduct.cost : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="$0"/>
            </div>
            <div>
              <label class="text-xs font-semibold text-gray-600">Precio venta</label>
              <input name="price" value="<%= editProduct ? editProduct.price : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="$0"/>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="text-xs font-semibold text-gray-600">Stock actual</label>
              <input name="stock" value="<%= editProduct ? editProduct.stock : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="0"/>
            </div>
            <div>
              <label class="text-xs font-semibold text-gray-600">Stock m?nimo</label>
              <input name="minStock" value="<%= editProduct ? editProduct.minStock : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="0"/>
            </div>
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-600">Proveedor</label>
            <input name="supplier" value="<%= editProduct ? editProduct.supplier : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Proveedor"/>
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-600">Ubicaci?n</label>
            <input name="location" value="<%= editProduct ? editProduct.location : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Pasillo A / Rack 4"/>
          </div>
          <div class="flex gap-2">
            <button type="submit" class="flex-1 px-4 py-2 bg-gray-900 text-white rounded-md font-semibold">
              <%= editProduct ? 'Actualizar' : 'Guardar' %>
            </button>
            <a href="/inventario" class="flex-1 px-4 py-2 border border-gray-300 rounded-md font-semibold text-gray-700 text-center">Cancelar</a>
          </div>
        </form>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Lista de clientes</h2>
          <button class="text-xs text-gray-500">Ver todos</button>
        </div>
        <div class="mt-4 space-y-3 text-sm">
          <% clients.forEach(function(c){ %>
            <div class="flex items-center justify-between">
              <div>
                <p class="font-semibold"><%= c.name %></p>
                <p class="text-xs text-gray-500">?ltima compra: <%= c.lastPurchase %></p>
              </div>
              <span class="text-xs bg-green-100 text-green-700 px-2 py-1 rounded-full">$<%= c.total.toLocaleString('es-MX') %></span>
            </div>
          <% }) %>
        </div>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Ventas recientes</h2>
          <button class="text-xs text-gray-500">Ver reporte</button>
        </div>
        <div class="mt-4 space-y-3 text-sm">
          <% sales.forEach(function(s){ %>
            <div class="flex items-center justify-between">
              <div>
                <p class="font-semibold">Factura <%= s.invoice %></p>
                <p class="text-xs text-gray-500"><%= s.detail %></p>
              </div>
              <div class="text-right">
                <p class="font-semibold">$<%= s.amount.toLocaleString('es-MX') %></p>
                <p class="text-xs text-gray-500"><%= s.time %></p>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </section>
</div>
